<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<Pane
        fx:id="pane"
        minHeight="360.0"
        minWidth="640.0"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="javafxapplication3.FXMLDocumentController">
    <children>

        <MFXButton
                fx:id="ScanBtn"
                layoutX="15.0"
                layoutY="11.0"
                buttonType="RAISED"
                text="Escanear" />

        <Group
                fx:id="filesGroup"
                visible="false">
            <children>
                <Label
                        fx:id="titleLabel"
                        layoutX="15.0"
                        layoutY="11.0"
                        styleClass="h1"
                        text="Selecciona el archivo a imprimir" />
                <MFXButton
                        fx:id="btnAtras"
                        buttonType="RAISED"
                        layoutX="15.0"
                        layoutY="11.0"
                        text="AtrÃ¡s">
                    <graphic>
                        <MaterialDesignIconView
                                fill="WHITE"
                                glyphName="ARROW_LEFT"
                                size="24" />
                    </graphic>
                </MFXButton>
                <Label
                        fx:id="pathLabel"
                        layoutX="35.0"
                        layoutY="57.0"
                        text="Label" />
                <MFXScrollPane
                        fx:id="scrollPane"
                        fitToHeight="true"
                        fitToWidth="true"
                        hbarPolicy="NEVER"
                        layoutX="35.0"
                        layoutY="82.0">
                    <content>
                        <FlowPane
                                fx:id="flowPane"
                                alignment="TOP_CENTER"
                                columnHalignment="CENTER"
                                hgap="20.0"
                                prefWrapLength="0.0"
                                vgap="20.0">
                            <padding>
                                <Insets
                                        bottom="20.0"
                                        left="20.0"
                                        right="20.0"
                                        top="20.0" />
                            </padding>
                        </FlowPane>
                    </content>
                </MFXScrollPane>
            </children>
        </Group>
        <VBox
                fx:id="emptyVbox"
                layoutX="${(pane.width - emptyVbox.width) / 2}"
                layoutY="${(pane.height - emptyVbox.height) / 2}"
                alignment="CENTER">
            <Label
                    styleClass="h1"
                    text="Conecta una USB" />
            <Label
                    styleClass="h3"
                    text="O transfiere tus archivos" />
            <HBox>
                <children>
                    <ImageView
                            fx:id="redQrImage"
                            fitWidth="200.0"
                            fitHeight="200.0" />
                    <ImageView
                            fx:id="qrImage"
                            fitWidth="200.0"
                            fitHeight="200.0" />
                </children>
            </HBox>


        </VBox>
    </children>
</Pane>